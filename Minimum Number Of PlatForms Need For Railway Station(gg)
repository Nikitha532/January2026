class Solution:    #(gg)
    def minPlatform(self, arr, dep):
        platforms = 0
        max_platforms = 0
        i,j = 0,0
        n = len(arr)
        arr.sort()
        dep.sort()
        while i<n and j<n :
            if arr[i] <= dep[j] :
                platforms += 1
                max_platforms = max(max_platforms, platforms)
                i += 1
            else :
                platforms -= 1
                j += 1
        return max_platforms
        
