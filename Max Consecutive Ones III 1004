class Solution:
    def longestOnes(self, nums: List[int], k: int) -> int:
        left, right = 0,0
        maxLen = 0
        n = len(nums)
        zero = 0
        while right < n :
            if nums[right] == 0:
                zero += 1
            if zero>k:
                if nums[left]==0:
                    zero-=1
                left+=1
            if zero<=k:
                maxLen=max(maxLen, right-left+1)
            right += 1
        return maxLen

